<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="72dp"
    tools:context=".AddItemActivity">

    <Button
        android:id="@+id/btnDodajStavku"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:backgroundTint="#4CAF50"
        android:text="Dodaj"
        app:layout_constraintBottom_toTopOf="@+id/btnOdustani"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnOdustani"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputKalorije" />

    <Button
        android:id="@+id/btnOdustani"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:backgroundTint="#3F51B5"
        android:text="Odustani"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDodajStavku" />

    <EditText
        android:id="@+id/inputKalorije"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Kalorije"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/btnDodajStavku"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputNaziv" />

    <EditText
        android:id="@+id/inputNaziv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Naziv stavke"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/inputKalorije"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />
</androidx.constraintlayout.widget.ConstraintLayout>